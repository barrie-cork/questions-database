# API Keys (Required)
MISTRAL_API_KEY=your_mistral_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=question_bank
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Settings
SECRET_KEY=your_secure_secret_key_here
ENVIRONMENT=development
LOG_LEVEL=INFO

# Docker Ports (optional - defaults shown)
APP_PORT=8000
POSTGRES_PORT=5432
# REDIS_PORT=6379  # Uncomment if using Redis

# Upload Settings
MAX_UPLOAD_SIZE_MB=50
UPLOAD_FOLDER=uploads

# Performance Settings
WORKERS=1  # Number of Uvicorn workers (1 for development)
MAX_CONNECTIONS=100  # Database connection pool size

# CORS Settings (for development)
CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]